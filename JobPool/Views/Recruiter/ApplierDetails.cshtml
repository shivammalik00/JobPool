@model JobPool.Models.JobApplied
@{
    ViewBag.Title = "ApplierDetails";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<h2>ApplierDetails</h2>
<div class="unit-5 overlay" style="background-image: url('/images/hero_1.jpg');">
    <div class="container text-center">
        <p class="mb-0 unit-6">@Html.ActionLink("Home ", "index", "User") <span class="sep">></span> <span>Job Apply</span></p>

    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-lg-8 mb-5">



                <div class="p-5 bg-white">

                    <div class="mb-4 mb-md-5 mr-5">
                        <div class="job-post-item-header d-flex align-items-center">
                            <h2 class="mr-3 text-black h4">@Model.JobApplier.FirstName @Model.JobApplier.LastName</h2>
                            <div class="badge-wrap">
                                <span class="border border-warning text-warning py-2 px-4 rounded"></span>
                            </div>
                        </div>
                        <div class="job-post-item-body d-block d-md-flex">
                            <div><span class="fl-bigmug-line-big104"></span> <span></span></div>
                        </div>
                    </div>
                    <div>
                        <h3>Description</h3>
                        <p>
                            @Model.JobApplier.HighestQualification
                        </p>
                    </div>
                    <div>
                        <h4>City</h4>
                        <span>
                            @Model.JobApplier.Location
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">

                <div class="p-4 mb-3 bg-white">
                    @*<h3 class="h5 text-black mb-3">Company Info</h3>*@
                    <h5>Contact Details</h5>
                    <span>
                        @Model.JobApplier.MobileNumber
                    </span>
                    <h5>Address</h5>
                    <span>
                        @Model.JobApplier.Email
                    </span>


                </div>

            </div>
        </div>
    </div>
</div>



